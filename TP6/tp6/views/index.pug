extends layout

block content
  .w3-container
    h1 Gestão do Arquivo Sonoro
    button.w3-button.w3-blue-grey.w3-display-topright.w3-margin-right.w3-margin-top(onclick="location.href='/novo'") Novo
    .w3-card-4
      table.w3-table-all
        tr
          th Província
          th Localidade
          th Título
          th Músico
          th Duração
          th Operações
        each a, i in lista
          tr
            td= a.prov
            td= a.local
            td= a.tit
            td= a.musico
            td= a.duracao
            td 
              button.w3-button.w3-blue-grey(onclick="apagaItem('" + i + "')") Apagar
              button.w3-btn.w3-blue-grey(onclick="window.location.assign('/atualizar/" + i + "')") Atualizar
    footer.w3-container.w3-teal
      address Gerado por G.A.S
            