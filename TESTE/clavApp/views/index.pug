extends layout

block content
  .w3-container.w3-center
      h1 Clav
      p Classificação e Avaliação da Informação Pública


  .w3-container
        h1 Lista de Entidades
        table.w3-table-all
            tr
                th Sigla
                th Designação
                th id
                th Opções
                each ent in lista
                    tr
                        td= ent.sigla
                        td= ent.designacao
                        td= ent.id
                        td
                            form.w3-container(action=`/${ent.id}` method='get')
                                input.w3-btn.w3-border.w3-blue(type='submit' value='Consultar')
        footer.w3-container.w3-teal
